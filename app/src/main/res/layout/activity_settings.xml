<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="?attr/mainBackgroundColor"
    android:weightSum="1"
    android:id="@+id/settingsLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/Settings_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settingsTitleMarginTop"
                android:layout_marginTop="@dimen/settingsTitleMarginBottom"
                android:text="  Display Settings"
                android:textSize="@dimen/settingsTitleTextSize"
                android:textColor="?attr/titleTextColor"/>

            <Switch
                android:id="@+id/settings_switch1"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="wrap_content"
                android:text="4G Mode"
                android:textColor="?attr/titleTextColor"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="wrap_content"
                android:text="    When 4G mode is enabled, all the photos in recent list will disappear."
                android:textColor="?attr/contentTextColor"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="wrap_content"
                android:text="" />

            <Switch
                android:id="@+id/settings_switch2"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="wrap_content"
                android:text="Night Shift"
                android:textColor="?attr/titleTextColor"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="@dimen/settingsSwitchInfoHeight"
                android:text="    For the night is dark and full of terrors, when the night shift on, everything will go dark and it will be less harmful to your eyes."
                android:textColor="?attr/titleTextColor"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settingsSubTitleMarginBottom"
                android:layout_marginTop="@dimen/settingsSubTitleMarginTop"
                android:text="  Tag Settings"
                android:textSize="@dimen/settingsSubTitleTextSize"
                android:textColor="?attr/titleTextColor"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/settingsSearchWidth"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/settingsSubTitleMarginBottom"
                android:text="    Existed Tags"
                android:textColor="?attr/titleTextColor"
                android:textSize="@dimen/settingsSubTitleTextSize" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/settings_textinputlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/Settings_textinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter tag here" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/Settings_addbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/buttonBackgroundColor"
                android:text="Add New Tag"
                android:textColor="?attr/buttonTextColor" />

            <ListView
                android:id="@+id/settings_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/Settings_deletebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/buttonBackgroundColor"
                android:textColor="?attr/buttonTextColor"
                android:text="Delete Selected Tag" />

            <Button
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settingsButtonVerticalMargin"
                android:layout_marginBottom="@dimen/settingsButtonVerticalMargin"
                android:background="?attr/buttonBackgroundColor"
                android:textColor="?attr/buttonTextColor"
                android:text="About us" />

            <Button
                android:id="@+id/settings_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settingsButtonVerticalMargin"
                android:layout_marginBottom="@dimen/settingsButtonVerticalMargin"
                android:background="?attr/buttonBackgroundColor"
                android:textColor="?attr/buttonTextColor"
                android:text="Clear IN Cache" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>